{
  "name": "3d-csv",
  "version": "0.1.1",
  "description": "Pipe-separated comma-separated values â€” infinitely dimensional data in a 2D CSV.",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "bun run build:tsc && bun run build:bun",
    "build:tsc": "bunx tsc --noEmit && bunx tsc -p tsconfig.build.json",
    "build:bun": "bun build ./src/index.ts --target=node --format=esm --minify --outfile=dist/index.mjs && bun build ./src/index.ts --target=node --format=cjs --minify --outfile=dist/index.cjs",
    "test": "bun test",
    "changeset": "changeset",
    "version": "changeset version",
    "release": "bun run build && npm publish",
    "prepublishOnly": "bun run build"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.0",
    "bun-types": "latest",
    "typescript": "^5.3.0"
  },
  "peerDependencies": {
    "zod": ">=3.0.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=18"
  }
}
